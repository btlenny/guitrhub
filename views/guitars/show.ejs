<%- include('../partials/header') %>

<section id="show-page">
    <div><b>Brand:</b> <%= guitar.brand %></div>
    <div><b>Model:</b> <%= guitar.model %></div>
 </section>

<% if (guitar.reviews.length) { %>
    <table>
      <thead>
        <h2>REVIEWS</h2>
      </thead>
      <tbody>
        <% guitar.reviews.forEach(function(r) { %>
          <tr>
              <div class="review-container">
                <div class="review-details">
                    <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
                  <p><%= r.content %></p>
                  <p><strong>Rating:</strong> <%= r.rating %></p>
                </div>
              </div>
              </tr>
              <td>
                <% if (user?._id.equals(r.user)) { %>
                  <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                  </form>
                  <form action="/reviews/<%= r._id %>/edit" method="GET">
                    <button type="submit">Edit</button>
                </form>
                <% } %>
              </td>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

  <br><br><h2>Add a Review</h2>
<form id="add-review-form" method="POST"
  action="/guitars/<%= guitar._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
    <option value="10">10</option>
  </select>
  <input type="submit" value="Add Review">
</form>